        <model name="wall_east">
            <pose>5 0 1.25 0 0 1.5708</pose>
            <static>true</static>
            <link name="link">
                <collision name="col"><geometry><box><size>10 0.2 2.5</size></box></geometry></collision>
                <visual    name="vis">
                    <geometry><box><size>10 0.2 2.5</size></box></geometry>
                    <material>
                        <ambient>0.7 0.7 0.7 1</ambient>

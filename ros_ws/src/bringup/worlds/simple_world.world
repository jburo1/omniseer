        <model name="cylinder_1">
            <pose>2 2 0.3 0 0 0</pose> 
            <static>true</static>
            <link name="link">
                <collision name="col">
                    <geometry>
                        <cylinder>
                            <radius>0.3</radius>
                            <length>0.6</length>
                        </cylinder>
                    </geometry>
                    <surface>
                        <contact>
                            <collide_bitmask>0x01</collide_bitmask>
                        </contact>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
                <visual name="vis">

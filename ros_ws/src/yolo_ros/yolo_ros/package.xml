<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>yolo_ros</name>
  <version>4.2.0</version>
  <description>YOLO for ROS 2</description>
  <maintainer email="mgons@unileon.es">Miguel Ángel González Santamarta</maintainer>
  <license>GPL-3</license>

  <depend>cv_bridge</depend>
  <depend>std_srvs</depend>
  <depend>sensor_msgs</depend>
  <depend>yolo_msgs</depend>

  <!-- Test dependencies -->
  <test_depend>pytest</test_depend>
  <!-- Listed so CI and tooling know tests require ruff. In CI we install via pip and skip rosdep for this key. -->
  <test_depend>ruff</test_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
